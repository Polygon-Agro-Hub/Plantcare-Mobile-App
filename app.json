{
  "expo": {
    "name": "PlantCare",
    "slug": "deployement",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/favicon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/favicon.png",
      "resizeMode": "contain",
      "backgroundColor": "#26D041"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "NSCameraUsageDescription": "This app requires camera access to scan plant QR codes.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to save plant images.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to track plant care reminders based on your location.",
        "NSLocationAlwaysUsageDescription": "This app uses your location in the background to give accurate care reminders.",
        "NSMicrophoneUsageDescription": "Microphone access is required to record sounds for plant growth monitoring.",
        "NSBluetoothPeripheralUsageDescription": "Bluetooth is required to connect to plant sensors.",
        "UIBackgroundModes": [
          "location"
        ]
      },
      "bundleIdentifier": "com.plant.Plantcare",
      "permissions": [
        "CAMERA",
        "PHOTO_LIBRARY",
        "LOCATION",
        "NOTIFICATIONS",
        "MICROPHONE",
        "CALENDAR",
        "CONTACTS",
        "MOTION",
        "BLUETOOTH",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "ACCESS_WIFI_STATE",
        "CHANGE_WIFI_STATE",
        "ACCESS_NETWORK_STATE",
        "CHANGE_NETWORK_STATE",
        "VIBRATE",
        "USE_FINGERPRINT",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/favicon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.plant.Plantcare",
      "permissions": [
        "INTERNET",
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "VIBRATE",
        "WAKE_LOCK",
        "FOREGROUND_SERVICE",
        "RECEIVE_BOOT_COMPLETED",
        "USE_FINGERPRINT",
        "LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "ACCESS_WIFI_STATE",
        "CHANGE_WIFI_STATE",
        "ACCESS_NETWORK_STATE",
        "CHANGE_NETWORK_STATE",
        "SYSTEM_ALERT_WINDOW",
        "FOREGROUND_SERVICE",
        "REQUEST_INSTALL_PACKAGES"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "API_BASE_URL": "https://ag-world-orginal.vercel.app/",
      "SHOUTOUT_API_KEY": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..ayaQjSjBxcSSnqskZp_F_NlrLa_98ddiOi1lfK8WrJ4",
      "eas": {
        "projectId": "cc6eedbe-b743-4e76-864e-0dd8ecfaa871"
      },
      "router": {
        "origin": false
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/favicon.png",
          "color": "#ffffff"
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "expo-camera": {
      "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
      "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
      "recordAudioAndroid": true
    },
    "newArchEnabled": true,
    "owner": "dilshankaluhennadi"
  }
}
